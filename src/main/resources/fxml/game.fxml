    <ImageView fitHeight="40" fitWidth="40" x="1220" y="180" styleClass="demographic"/>
    <Circle layoutX="1240" layoutY="255" radius="23" styleClass="brownCircle"/>
    <ImageView fitHeight="40" fitWidth="40" x="1220" y="235" styleClass="notification"/>
    <Circle layoutX="1240" layoutY="310" radius="23" styleClass="brownCircle"/>
    <ImageView fitHeight="30" fitWidth="30" x="1225" y="295" styleClass="economic"/>

    <Circle layoutX="1220" layoutY="660" radius="103" styleClass="whiteCircle"/>
    <Circle layoutX="1220" layoutY="660" radius="100" styleClass="blueCircle" onMouseClicked="#changeTurn"/>
    <ImageView fitWidth="65" fitHeight="65" x="1185" y="635" styleClass="turn"/>
</Pane>
