      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Game"
      fx:id="pane"
      prefHeight="720" prefWidth="1280"
      stylesheets="@../styles/game.css" styleClass="background">
    <Circle layoutX="35" layoutY="35" radius="23" styleClass="Circle"/>
    <Circle layoutX="35" layoutY="90" radius="23" styleClass="Circle"/>
    <Circle layoutX="35" layoutY="145" radius="23" styleClass="Circle"/>
    <Circle layoutX="35" layoutY="200" radius="23" styleClass="Circle"/>
    <Circle layoutX="35" layoutY="255" radius="23" styleClass="Circle"/>
    <Circle layoutX="35" layoutY="310" radius="23" styleClass="Circle"/>
    <ImageView fitWidth="40" fitHeight="40" x="15" y="15" styleClass="gold"/>
    <ImageView fitWidth="40" fitHeight="40" x="15" y="70" styleClass="production"/>
    <ImageView fitWidth="40" fitHeight="40" x="15" y="125" styleClass="food"/>
    <ImageView fitWidth="40" fitHeight="40" x="15" y="180" styleClass="population"/>
    <ImageView fitWidth="40" fitHeight="40" x="15" y="235" styleClass="happiness"/>
    <ImageView fitWidth="40" fitHeight="40" x="15" y="290" styleClass="science"/>

    <Circle layoutX="1240" layoutY="35" radius="23" styleClass="brownCircle"/>
    <ImageView fitHeight="40" fitWidth="40" x="1220" y="15" styleClass="city" onMouseClicked="#showAllCities"/>
